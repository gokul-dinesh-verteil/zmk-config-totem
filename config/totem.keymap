        macos_base_layer {
            display-name = "macOS";
            label = "MBASE";
            bindings = <
            &kp Q       &kp W           &kp E        &kp R              &kp T        &kp Y    &kp U              &kp I              &kp O           &kp P
            &mt LCMD A  &mt LEFT_ALT S  &mt LCTRL D  &mt_shift LSHFT F  &kp G        &kp H    &mt_shift RSHFT J  &mt RCTRL K        &mt LEFT_ALT L  &mt LCMD SEMICOLON
&kp DELETE  &kp Z       &kp X           &kp C        &kp V              &kp B        &kp N    &kp M              &kp COMMA          &kp DOT         &kp FSLH            &kp SINGLE_QUOTE
                                        &kp TAB      &lt 2 ESCAPE       &kp SPACE    &kp RET  &lt 3 BACKSPACE    &kp LC(BACKSPACE)
            >;
        };

        nav_layer {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

