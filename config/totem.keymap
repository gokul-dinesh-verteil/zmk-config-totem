            //             ┃     A     ┃     R     ┃     S     ┃     T     ┃     D     ┃   ┃     H     ┃     N     ┃     E     ┃     I     ┃     O     ┃
            // ┏━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┓
            // ┃     Q     ┃     Z     ┃     X     ┃     C     ┃     V     ┃     B     ┃   ┃     K     ┃     M     ┃     ,     ┃     .     ┃     /     ┃     \     ┃
            // ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛
            //                                     ┃    DEL    ┃    TAB    ┃    SPC    ┃   ┃   ENTER   ┃           ┃   BSPC    ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
                &kp Q           &kp W           &kp E        &kp R              &kp T        &kp Y    &kp U              &kp I        &kp O           &kp P
                &mt LEFT_ALT A  &mt LEFT_GUI S  &mt LCTRL D  &mt_shift LSHFT F  &kp G        &kp H    &mt_shift RSHFT J  &mt RCTRL K  &mt LEFT_GUI L  &mt LEFT_ALT SEMICOLON
&kp LEFT_SHIFT  &kp Z           &kp X           &kp C        &kp V              &kp B        &kp N    &kp M              &kp COMMA    &kp DOT         &kp FSLH                &kp SINGLE_QUOTE
                                                &kp TAB      &lt 2 ESCAPE       &kp SPACE    &kp RET  &lt 3 BACKSPACE    &kp DELETE
